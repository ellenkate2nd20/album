<% include ../partials/header %>
	<h1>
		My Genres

		<% if(authdata != null) { %>
		<a href="/genres/add" class="btn btn-success">Add Genre</a>
		<% } %>
	</h1>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% for(var i = 0; i < genres.length; i++) { %>
				<tr>
					<td><%= genres[i].name %></td>

					<td>
						<% if(authdata != null) { %>
						<form method="post" action="/genres/delete/<%= genres[i].id %>">
							<input class="btn btn-danger" type="submit" value="Delete">
						</form>

						<a href="/genres/edit/<%= genres[i].id %>" class="btn btn-success">Edit</a>
						<% } %>
					</td>
				</tr>
			<% } %>
		</tbody>
	</table>
<% include ../partials/footer %>