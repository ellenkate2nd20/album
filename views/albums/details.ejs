<% include ../partials/header %>
	<a href="/albums" class="btn btn-success">Go Back</a>

	<h1><%= album.artist %> - <%= album.title %></h1>

	<div class="row album">
		<div class="col-md-4">
			<img src="/images/<%= album.cover %>">
		</div>

		<div class="col-md-8">
			<ul class="list-group">
				<li class="list-group-item">
					<strong>Artist: </strong> <%= album.artist %>
				</li>

				<li class="list-group-item">
					<strong>Album: </strong> <%= album.title %>
				</li>

				<li class="list-group-item">
					<strong>Genre: </strong> <%= album.genre %>
				</li>

				<li class="list-group-item">
					<strong>Release Year: </strong> <%= album.year %>
				</li>

				<li class="list-group-item">
					<strong>Label: </strong> <%= album.label %>
				</li>

				<li class="list-group-item">
					<strong>Tracks: </strong> <%= album.tracks %>
				</li>
			</ul>
		</div>
	</div>

	<hr>

	<div class="row">
		<div class="col-md-12">
			<h4>Album Info</h4>
			<p><%= album.info %></p>
		</div>
	</div>

	<br>

	<hr>

	<div class="detail-choose">
		<form method="post" action="/albums/details/delete/<%= id %>">
			<input class="btn btn-danger" type="submit" value="Delete">
		</form>

		<a href="/albums/edit/<%= id %>" class="btn btn-success">Edit</a>
	</div>
<% include ../partials/footer %>