<% include ../partials/header %>
	<h1>
		My Albums

		<% if(authdata != null) { %>
		<a href="/albums/add" class="btn btn-success">Add Album</a>
		<% } %>
	</h1>

	<div class="row">
		<% for(var i = 0; i < albums.length; i++) { %>
		<div class="col-md-4 albums">
			<div class="img-container">
				<a href="/albums/details/<%= albums[i].id %>">
					<img src="/images/<%= albums[i].cover %>">
				</a>
			</div>

			<h4 class="album-title text-center">
				<%= albums[i].title %>
			</h4>

			<p class="artist-name text-center">
				<%= albums[i].artist %>
			</p>
		</div>
		<% } %>
	</div>
<% include ../partials/footer %>